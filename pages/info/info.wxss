.items{
    
}
.item-list{
    padding:10rpx 0;
    position: relative;
}
.item-list:after{
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1px;
    background-color: #d0d0d0;
    -webkit-transform-origin: left bottom;
    transform-origin: left bottom;
    transform: scaleY(0.5);
}
.left{
    margin-right:20rpx;
}
.center .introduce,.right{
    font-size: 20rpx;
}
.tname,.introduce{
    overflow:hidden;
    width:450rpx;
    text-overflow:ellipsis;
    white-space:nowrap;
    max-width: 100%;
}